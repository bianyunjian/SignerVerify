{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ES Module",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom"],
    "strict": true,
    "declaration": true,
    "declarationDir": "lib",
    "outDir": "lib",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  }
}